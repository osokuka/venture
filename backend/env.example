# ============================================
# Production Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# cp env.example .env
# ============================================

# ============================================
# Database Configuration
# ============================================
DB_NAME=venturelink
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here
DB_HOST=db
DB_PORT=5432

# ============================================
# Django Configuration
# ============================================
# IMPORTANT: Generate a secure secret key for production!
# You can generate one with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_SETTINGS_MODULE=config.settings.production

# ============================================
# Allowed Hosts
# ============================================
# Comma-separated list of domain names your Django site can serve
# Example: ventureuplink.com,www.ventureuplink.com,backend.ventureuplink.com
DJANGO_ALLOWED_HOSTS=ventureuplink.com,www.ventureuplink.com,backend.ventureuplink.com

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins for CORS
# Must include your frontend domain(s) with https://
# Example: https://ventureuplink.com,https://www.ventureuplink.com
CORS_ALLOWED_ORIGINS=https://ventureuplink.com,https://www.ventureuplink.com

# ============================================
# CSRF Trusted Origins
# ============================================
# Comma-separated list of trusted origins for CSRF protection
# Must include your frontend and backend domains with https://
# Example: https://ventureuplink.com,https://www.ventureuplink.com,https://backend.ventureuplink.com
CSRF_TRUSTED_ORIGINS=https://ventureuplink.com,https://www.ventureuplink.com,https://backend.ventureuplink.com

# ============================================
# Frontend URL
# ============================================
# The public URL of your frontend application
# Used for email links and redirects
FRONTEND_URL=https://ventureuplink.com

# ============================================
# Email Configuration
# ============================================
EMAIL_HOST=mail.prosolutions-ks.com
EMAIL_PORT=465
EMAIL_USE_SSL=True
EMAIL_USE_TLS=False
EMAIL_HOST_USER=ventures@prosolutions-ks.com
EMAIL_HOST_PASSWORD=your_email_password_here
DEFAULT_FROM_EMAIL=ventures@prosolutions-ks.com

# ============================================
# Redis Configuration
# ============================================
# Redis URL (used by Celery)
# In docker-compose, this will be overridden to: redis://redis:6379/0
# Keep this for reference, but docker-compose sets it automatically
REDIS_URL=redis://redis:6379/0

# ============================================
# Superuser Creation
# ============================================
# These values are used by entrypoint.sh to create the initial admin user
# If not set, superuser creation will be skipped (you can create manually)
DJANGO_SUPERUSER_EMAIL=admin@ventureuplink.com
DJANGO_SUPERUSER_PASSWORD=your_secure_admin_password_here
DJANGO_SUPERUSER_NAME=Admin User

# ============================================
# Optional: Logging
# ============================================
# LOG_FILE=/app/logs/django.log

# ============================================
# Security Notes
# ============================================
# 1. Never commit the .env file to version control
# 2. Use strong, unique passwords for all credentials
# 3. Generate a secure DJANGO_SECRET_KEY (see command above)
# 4. Ensure all URLs use https:// in production
# 5. Review ALLOWED_HOSTS and CORS settings before deployment
# ============================================
